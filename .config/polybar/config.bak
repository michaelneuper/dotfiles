[global/wm]
; File inclusions
include-file = ~/.config/polybar/colors.ini
include-file = ~/.config/polybar/modules.ini

;; Bars ;;;
[bar/root]
enable-ipc = true
font-0 = "JetbrainsMono Nerd Font:size=10.5;3"
font-1 = "JetbrainsMono Nerd Font:size=11.5:style=Bold;3"
font-2 = "feather:size=12;3"
font-3 = "Noto Sans CJK JP:size=11:style=Bold;3"
font-4 = "Iosevka Nerd Font:size=10;3"
padding = 2
border-size = 0
border-color = ${color.foreground}
height = 30
;radius = 20
;Works very well with a radius like this! Put it on every bar.
background = ${color.background}
foreground = ${color.foreground}
override-redirect=false
offset-y = 10
wm-restack = bspwm
separator = " "


[bar/workspaces]
inherit = bar/root
width = 20.5%
offset-x = 0.5%
line-size = 1
modules-left = arch sep workspaces
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[bar/win-title]
inherit = bar/root
enable-ipc = true
width = 28.25%
offset-x = 21.5%
modules-left = title

[bar/music]
inherit = bar/root
enable-ipc = true
width = 26.75%
offset-x = 50.25%
modules-left = alsa
modules-center = mpris mpris-play-pause

[bar/info]
inherit = bar/root
width = 14.5%
offset-x = 77.5%
modules-center = cpu memory filesystem updates

[bar/time]
inherit = bar/root
width = 4.4%
offset-x = 92.5%
modules-center = time

[bar/power]
inherit = bar/root
width = 2%
offset-x = 97.5%
modules-center = powermenu

